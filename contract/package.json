{
  "name": "cryptozombies-battle",
  "version": "1.0.0",
  "description": "Game the battle of zombies with NFT in blockchain",
  "main": "index.js",
  "author": "Camilo da Silveira",
  "license": "MIT",
  "scripts": {
    "node": "npx hardhat node",
    "local:czbattle": "npx hardhat ignition deploy ./ignition/modules/CryptozombiesBattle.ts --network localhost",
    "local:czbattleranking": "npx hardhat ignition deploy ./ignition/modules/CryptozombiesBattleRanking.ts --network localhost",
    "local:czbattlemarket": "npx hardhat ignition deploy ./ignition/modules/CryptozombiesBattleMarket.ts --network localhost",
    "ignition": "yarn run local:czbattle && yarn run local:czbattleranking && yarn run local:czbattlemarket",
    "test": "npx hardhat test",
    "dashboard": "npx truffle dashboard",
    "deploy:main": "npx hardhat run scripts/deployMain.ts --network dashboard",
    "deploy:market": "npx hardhat run scripts/deployMarket.ts --network dashboard",
    "deploy": "npx hardhat run scripts/deploy.ts --network dashboard",
    "verify:czbattle": "npx hardhat verify --network dashboard 0x2958dBc6c1182c69c354d5Ec63dad5c3cCAF4f14 --contract contracts/cryptozombiesBattle/CryptozombiesBattle.sol:CryptozombiesBattle",
    "verify:czbattleranking": "npx hardhat verify --network dashboard 0x0B2f53cd8A011675e737920Cbf3Dd8CCf33FF74d --contract contracts/cryptozombiesBattleRanking/CryptozombiesBattleRanking.sol:CryptozombiesBattleRanking 0x2958dBc6c1182c69c354d5Ec63dad5c3cCAF4f14",
    "verify:czbattlemarket": "npx hardhat verify --network dashboard 0x814FC32616DCC7f727663660E102b9ae26c700b5 --contract contracts/cryptozombiesBattleMarket/CryptozombiesBattleMarket.sol:CryptozombiesBattleMarket 0x2958dBc6c1182c69c354d5Ec63dad5c3cCAF4f14"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.19",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0"
  }
}
